<li><%= gravatar_for user, size: 50 %>
  <%= link_to user.username, user_path(current_user.id) %>
   <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user_destroy_path(user), method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>