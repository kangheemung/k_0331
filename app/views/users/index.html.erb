<% provide(:title, 'All users') %>
<h1>ALL users</h1>

<table>
  <%= will_paginate %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.username, user_path %>
    </li>
    <%= render user %>

    <td><%= user.email %></td>
    <td><%= link_to 'Show', users_path(user.id) %></td>
    <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
    <td><%= link_to 'Destroy',users_destoy_path, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<%= will_paginate %>
</table>

